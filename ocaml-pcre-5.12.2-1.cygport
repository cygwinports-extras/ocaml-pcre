ORIG_PN="pcre-ocaml"
inherit ocaml

DESCRIPTION="Perl Compatibility Regular Expressions for OCaml"
HOMEPAGE="http://www.ocaml.info/home/ocaml_sources.html"
SRC_URI="http://www.ocaml.info/ocaml_sources/${ORIG_PN}-${PV}.tar.bz2"

src_compile() {
	lndirs
	cd ${B}
	cygmake all doc
}

src_install() {
	cd ${B}
	ocaml_install

	# META version was not updated
	sed -e "s#version=.*#version=\"${PV}\"#" \
		-i ${D}${OCAML_LIBDIR}/pcre/META
}
